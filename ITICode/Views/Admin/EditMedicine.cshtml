@using ITI_Hackathon.ServiceContracts.DTO
@model MedicineUpdateRequestDto
@{
	Layout = "~/Views/Shared/_DashboardLayout.cshtml";
	ViewData["Title"] = "Edit Medicine";
}
<h2><i class="bi bi-pencil"></i> Edit Medicine</h2>

<form asp-action="Edit" asp-controller="Admin" method="post" class="shadow p-4 rounded bg-light">
    <input type="hidden" asp-for="Id" />

    <div class="mb-3">
        <label class="form-label">Name</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label">Category</label>
        <input asp-for="Category" class="form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label">Description</label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <div class="mb-3">
        <label class="form-label">Price</label>
        <input asp-for="Price" type="number" step="0.01" class="form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label">Stock</label>
        <input asp-for="Stock" type="number" class="form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label">Image URL</label>
        <input asp-for="ImageUrl" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary"><i class="bi bi-arrow-repeat"></i> Update</button>
    <a asp-action="GetAllMedicines" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Back</a>
</form>