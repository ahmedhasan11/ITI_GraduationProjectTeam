@using ITI_Hackathon.ServiceContracts.DTO
@model MedicineAddRequestDto
@{
	Layout = "~/Views/Shared/_DashboardLayout.cshtml";
	ViewBag.Title = "Add Medicine";
}


<h2><i class="bi bi-plus-circle"></i> Add Medicine</h2>

<form asp-action="Create" method="post" class="shadow p-4 rounded bg-light">
    <div class="mb-3">
        <label class="form-label">Name</label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label">Category</label>
        <input asp-for="Category" class="form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label">Description</label>
        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
    </div>
    <div class="mb-3">
        <label class="form-label">Price</label>
        <input asp-for="Price" type="number" step="0.01" class="form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label">Stock</label>
        <input asp-for="Stock" type="number" class="form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label">Image URL</label>
        <input asp-for="ImageUrl" class="form-control" />
    </div>
    <button type="submit" class="btn btn-success"><i class="bi bi-save"></i> Save</button>
    <a asp-action="GetAllMedicines" class="btn btn-secondary"><i class="bi bi-arrow-left"></i> Back</a>
</form>
