@model IEnumerable<ITI_Hackathon.ServiceContracts.DTO.DoctorApprovedDTO>
@{
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="pc-content">
    <!-- [ breadcrumb ] start -->
    <div class="page-header">
        <div class="page-block">
            <div class="row align-items-center">
                <div class="col-md-12">
                    <div class="page-header-title">
                        <h2 class="mb-0">Doctors List</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- [ breadcrumb ] end -->
    <!-- [ Main Content ] start -->
    <div class="row">
        <div class="col-sm-12">
            <div class="card table-card">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover" id="pc-dt-simple">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Doctor Name</th>
                                    <th>Speciality</th>
                                    <th>Rating</th>
                                    <th>License Number</th>
                                    <th>Status</th>
                                    <th class="text-center">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var doctor in Model.Select((value, i) => new { i, value }))
                                {
                                    var d = doctor.value;
                                    <tr>
                                        <td>@(doctor.i + 1)</td>
                                        <td>
                                            <div class="row">
                                                <div class="col-auto pe-0">
                                                    <img src="~/assets/images/user/avatar-2.jpg" alt="user-image"
                                                         class="wid-40 rounded-circle">
                                                </div>
                                                <div class="col">
                                                    <h5 class="mb-0">@d.FullName</h5>
                                                    <p class="text-muted f-12 mb-0">@d.Email</p>
                                                </div>
                                            </div>
                                        </td>
                                        <td>@d.Specialty</td>
                                        <td>@d.Rating</td>
                                        <td>@d.LicenseNumber</td>
                                        <td>
                                            @if (d.IsApproved)
                                            {
                                                <span class="badge bg-light-success rounded-pill f-12">Verified</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-light-danger rounded-pill f-12">Pending</span>
                                            }
                                        </td>
                                        <td class="text-center">
                                            <ul class="list-inline me-auto mb-0">
                                                <li class="list-inline-item align-bottom" title="View">
                                                    <a href="#" class="avtar avtar-xs btn-link-secondary"
                                                       data-bs-toggle="modal" data-bs-target="#viewDoctor-@d.UserId">
                                                        <i class="ti ti-eye f-18"></i>
                                                    </a>
                                                </li>
                                                <li class="list-inline-item align-bottom" title="Edit">
                                                    <a href="#" class="avtar avtar-xs btn-link-primary"
                                                       data-bs-toggle="modal" data-bs-target="#editDoctor-@d.UserId">
                                                        <i class="ti ti-edit-circle f-18"></i>
                                                    </a>
                                                </li>
                                                <li class="list-inline-item align-bottom" title="Delete">
                                                    <a href="#" class="avtar avtar-xs btn-link-danger"
                                                       data-bs-toggle="modal" data-bs-target="#deleteDoctor-@d.UserId">
                                                        <i class="ti ti-trash f-18"></i>
                                                    </a>
                                                </li>
                                            </ul>
                                        </td>
                                    </tr>

                                    <!-- View Modal -->
                                    <div class="modal fade" id="viewDoctor-@d.UserId" tabindex="-1" aria-hidden="true">
                                        <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable">
                                            <div class="modal-content">
                                                <div class="modal-header border-0 pb-0">
                                                    <h5 class="mb-0">Doctor Details</h5>
                                                    <a href="#" class="avtar avtar-s btn-link-danger" data-bs-dismiss="modal">
                                                        <i class="ti ti-x f-20"></i>
                                                    </a>
                                                </div>
                                                <div class="modal-body text-center">
                                                    <img class="rounded-circle img-fluid wid-60 mb-3"
                                                         src="~/assets/images/user/avatar-5.jpg" alt="User image">
                                                    <h5 class="mb-0">@d.FullName</h5>
                                                    <p>@d.Email</p>
                                                    <hr class="my-3">
                                                    <div class="row g-3">
                                                        <div class="col-4">
                                                            <h5>@d.Specialty</h5>
                                                            <small class="text-muted">Speciality</small>
                                                        </div>
                                                        <div class="col-4">
                                                            <h5>@d.LicenseNumber</h5>
                                                            <small class="text-muted">License</small>
                                                        </div>
                                                        <div class="col-4">
                                                            <h5>@d.Rating</h5>
                                                            <small class="text-muted">Rating</small>
                                                        </div>
                                                    </div>
                                                    <hr class="my-3">
                                                    <button type="button" class="btn btn-success" data-bs-dismiss="modal">Ok</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Edit Modal -->
                                    <!-- Edit Role Modal -->
                                    <div class="modal fade" id="editDoctor-@d.UserId" tabindex="-1" aria-hidden="true">
                                        <div class="modal-dialog modal-md modal-dialog-centered">
                                            <div class="modal-content">
                                                <div class="modal-header bg-primary text-white">
                                                    <h5 class="modal-title">Edit Doctor Role</h5>
                                                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                                                </div>
                                                <div class="modal-body text-center">
                                                    <!-- Profile Image -->
                                                    <img src="~/assets/images/user/avatar-2.jpg" class="rounded-circle mb-3 border border-2 border-primary" style="width:90px;" />

                                                    <!-- Doctor Info -->
                                                    <h5 class="mb-0">@d.FullName</h5>
                                                    <small class="text-muted">@d.Email</small>
                                                    <div class="mt-2">
                                                        <span class="badge bg-info me-1">License: @d.LicenseNumber</span>
                                                        <span class="badge bg-success me-1">Specialty: @d.Specialty</span>
                                                        <span class="badge bg-warning text-dark">Rating: @d.Rating</span>
                                                    </div>

                                                    <!-- Role Form -->
                                                    <form form method="post" asp-controller="Admin" asp-action="EditDoctorRoleAsyncc" class="mt-3 text-start">
                                                        @Html.AntiForgeryToken()
                                                        <input type="hidden" name="UserId" value="@d.UserId" />

                                                        <label class="form-label">Role</label>
                                                        <select class="form-select mb-3" id="role-@d.UserId" name="NewRole">
                                                            <option value="Patient">Patient</option>
                                                            <option value="Doctor" selected>Doctor</option>
                                                        </select>
                                                        <button type="submit" class="btn btn-primary w-100">Save Role</button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <!-- Delete Modal -->
                                    <div class="modal fade" id="deleteDoctor-@d.UserId" tabindex="-1" aria-hidden="true">
                                        <div class="modal-dialog modal-md modal-dialog-centered">
                                            <div class="modal-content">
                                                <div class="modal-body text-center">
                                                    <h5>Are you sure you want to delete <b>@d.FullName</b>?</h5>
                                                    <div class="mt-3">
                                                        <form method="post" action="@Url.Action("DeleteDoctor","Admin")">
                                                            <input type="hidden" name="UserId" value="@d.UserId" />
                                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                            <button type="submit" class="btn btn-danger">Delete</button>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>